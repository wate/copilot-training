{
  "servers": {
    "thinking-support": {
      "type": "stdio",
      "command": "uv",
      "args": [
        "run",
        "thinking-support"
      ],
      "cwd": "~/Project/wate/mcp-thinking-support"
    },
    "playwright": {
      // https://github.com/microsoft/playwright-mcp
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp@latest",
        "--headless",
        "--isolated"
      ]
    },
    "excel": {
      // https://github.com/haris-musa/excel-mcp-server/
      "command": "uvx",
      "args": [
        "excel-mcp-server",
        "stdio"
      ],
    },
    "duckduckgo": {
      // https://github.com/nickclyde/duckduckgo-mcp-server
      "command": "uvx",
      "args": [
        "duckduckgo-mcp-server",
      ],
    },
